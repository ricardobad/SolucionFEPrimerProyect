@model FEBiblioteca.Models.UsuariosModel

@{
    ViewData["Title"] = "CrearUsuario";
}
@section noheader
{
 <h1></H1>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inicio Hotel</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            line-height: 1.6;
        }

        h1 {
            font-family: 'Times New Roman', Times, serif;
            color: #fff;
            font-size: 2.5rem;
            margin-top: 30px;
        }

        hr {
            border: 1px solid #007bff;
            margin: 20px 0;
            color: #fff;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #2c3e50; /* Fondo blanco para el contenido */
            border-radius: 5px; /* Añado bordes redondeados */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Agrego sombra al contenedor */
        }

        label {
            font-family: 'Times New Roman', Times, serif;
            color: #fff;
            font-weight: bold;
            font-size: 1.0rem;
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ced4da;
        }

        .btn-primary {
            color: #fff;
            background-color: lightslategrey;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                border-color: #e0a800;
            }

        .text-danger {
            color: #dc3545;


        }

        .btn-volver {
            color: #fff;
            background: lightslategrey;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1><img src="https://cdn-icons-png.flaticon.com/512/32/32441.png" alt="Logo" width="50">
                Crear Usuario</h1>
                <hr />

                <form asp-action="Agregar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Id_Usuario" class="control-label">ID Uusuario</label>
                        <input asp-for="Id_Usuario" class="form-control" />
                        <span asp-validation-for="Id_Usuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Contrasena" class="control-label">Contraseña</label>
                        <input asp-for="Contrasena" class="form-control" maxlength="15" />
                        <span asp-validation-for="Contrasena" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Id_perfil" class="control-label">ID Perfil</label>
                        <input asp-for="Id_perfil" class="form-control" />
                        <span asp-validation-for="Id_perfil" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>

                <div class="mt-3 text-center">

                    <a class="btn btn-primary btn-lg" asp-action="Index" asp-controller="Usuarios">Volver al menu</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

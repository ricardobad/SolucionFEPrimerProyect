@model FEBiblioteca.Models.UsuariosModel


@{
    ViewData["Title"] = "Login";
}

<style>
    /* Estilos para el diseño */
    body {
        background-color: #ffffff;
        font-family: Arial, sans-serif;
    }

    h1 {
        text-align: center;
        color: #000;
    }

    #logo {
        float: left;
        margin-right: 20px;
    }

    .login-container {
        width: 300px;
        margin: 100px auto;
        background-color: #203869;
        border: 1px solid #cccccc;
        border-radius: 10px;
        padding: 40px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .login-container h2 {
            color: #312F34;
            text-align: center;

        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #000000;
        }

        .form-group input[type="text"],
        .form-group input[type="password"] {
            width: 100%;
            padding: 12px;
            border: 1px solid #cccccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .form-group input[type="submit"] {
            width: 100%;
            padding: 12px;
            background-color: #000000;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .form-group input[type="submit"]:hover {
                background-color: #003d71;
            }
</style>

<body >
    <div class="login-container">
        <div id="logo">
            <img src="https://cdn.icon-icons.com/icons2/1381/PNG/512/systemlogout_94057.png" alt="Logo" width="50">
        </div>
        <h2>Log In</h2>
        <form asp-action="InicioSesion" asp-controller="Usuarios">
            <div class="form-group">
                <label asp-for="Id_Usuario" class="control-label">Id de usuario</label>
                <input asp-for="Id_Usuario" class="form-control" required placeholder="Cédula" />
                <span asp-validation-for="Id_Usuario" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Contrasena" class="control-label">Contraseña</label>
                <input asp-for="Contrasena" class="form-control" required type="password" maxlength="15" placeholder="Contraseña" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary">

            </div>

        </form>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
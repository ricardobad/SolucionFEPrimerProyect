@model FEBiblioteca.Models.HabitacionesModel

@{
    ViewData["Title"] = "EliminarHabitacion";
}

<h1><img src="https://cdn-icons-png.flaticon.com/512/2306/2306341.png" alt="Logo" width="50" />
    Eliminar Habitación</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Habitaciones</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id_habitacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id_habitacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Numero_habitacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Numero_habitacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo_habitacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo_habitacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ocupado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ocupado)
        </dd>
    </dl>
    
    <form asp-action="EliminarHabitacion">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-warning" asp-action="Index" asp-controller="Habitaciones">Regresar a habitaciones</a>
    </form>
</div>
